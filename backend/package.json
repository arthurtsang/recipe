{
  "name": "metro-bistro-backend",
  "version": "1.0.0",
  "description": "Metro Bistro Recipe Management Backend",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build && concurrently \"npm run dev:backend\" \"npm run dev:ui\"",
    "dev:backend": "nodemon --watch src --watch prisma --ext ts --exec \"npm run build && node dist/index.js\"",
    "dev:ui": "chokidar \"../web/src/**/*\" -c \"cd ../web && npm run build\"",
    "build:backend": "tsc -b",
    "build:ui": "cd ../web && npm install && npm run build",
    "build": "npm run build:backend && npm run build:ui"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@mui/icons-material": "^7.2.0",
    "@prisma/client": "^6.11.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.13",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-openid-connect": "^2.18.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "pg": "^8.16.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.0",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.3"
  }
}
